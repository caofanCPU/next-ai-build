{
  "name": "@windrun-huaiin/base-ui",
  "version": "12.0.0",
  "description": "Base UI components for windrun-huaiin projects",
  "type": "module",
  "exports": {
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.mjs",
      "require": "./dist/ui/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./components/script": {
      "types": "./dist/components/script/index.d.ts",
      "import": "./dist/components/script/index.mjs",
      "require": "./dist/components/script/index.js"
    },
    "./components/server": {
      "types": "./dist/components/server.d.ts",
      "import": "./dist/components/server.mjs",
      "require": "./dist/components/server.js"
    },
    "./styles/base-ui.css": "./src/styles/base-ui.css",
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "build:prod": "rollup -c rollup.config.mjs",
    "dev": "rollup -c rollup.config.mjs --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "catalog:",
    "@radix-ui/react-dropdown-menu": "catalog:",
    "@radix-ui/react-label": "catalog:",
    "@radix-ui/react-slot": "catalog:",
    "@windrun-huaiin/lib": "workspace:^",
    "class-variance-authority": "catalog:",
    "lucide-react": "catalog:"
  },
  "peerDependencies": {
    "clsx": "catalog:",
    "next": "catalog:",
    "next-intl": "catalog:",
    "next-themes": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwindcss": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "typescript": "catalog:"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "nextjs",
    "radix-ui",
    "tailwindcss"
  ],
  "author": "windrun-huaiin",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
